package graphics.shapes;

import java.awt.Point;

abstract class Personne extends Shape {
	
	private Homme pere;
	private Femme mere;
	private Personne[] children;
	private int Nbchild;
	private SText name;
	
	public Personne() {
		pere = new Homme();
		mere = new Femme();
		Nbchild=0;
		name = new SText(null,"");
	}
	
	public int setName(String s) {
		this.name.setText(s);
		return 0;
	}
	
	public String getName() {
		return this.name.getText();
	}
	
	public int setPosName(Point p) {
		this.name.setLoc(p);
		return 0;
	}
	
	public int displayA(int x,int y) { //affiche une personne
		return 0;
	}
	
	public int displayF(int x, int y) { //affiche une personne, ses parents et ses enfants
		return 0;
	}
	
	public Femme getMom() {
		return this.mere;
	}
	
	public int setMom(Femme Mom,boolean i) { //fixe/modifie la mère
		int a = 0;
		mere = Mom;
		if (i) Mom.addChild(this,false);
		return a;
	}
	
	public Homme getDad() {
		return this.pere;
	}
	
	public int setDad(Homme Dad,boolean i) { //fixe/modifie le père
		int a = 0;
		pere = Dad;
		if (i) Dad.addChild(this,false);
		return a;
	}

	public int addChild(Personne tod) {
		children[Nbchild]=tod;
		Nbchild++;
		return 0;
	}
	
	abstract int addChild(Personne tod, boolean i);
}
